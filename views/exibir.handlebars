<div class="container text-center">
    <div class="row">
        <div class="col-2"></div>
        <div class="col-8">

            <table class="table container-fluid table-striped mt-5">
                <thead>
                    <tr>
                        <th>Title</th>
                        <th>Pages</th>
                        <th>Opções</th>
                    </tr>
                </thead>
                {{#each livros}}
                <tr>
                    <td>{{ this.title }}</td>
                    <td>{{ this.pages }}</td>
                    <td><a href="/books/{{ this.id }}">Editar</a><a class="p-5 text-danger" href="/books/apagar/{{ this.id }}">Remover</a></td>
                </tr>
                {{/each}}
            </table>

        </div>
        <div class="col-2"></div>
    </div>
</div>